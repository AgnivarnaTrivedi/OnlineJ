<%= devise_error_messages! %>
<div class="section section-full-screen">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="card card-signup">
						<div class="header header-primary text-center">
							<h4>Log in</h4>
							<div class="social-line">
								<a href="/users/auth/facebook" class="btn btn-simple btn-just-icon">
									<i class="fa fa-facebook-square"></i>
								</a>
								<a href="/users/auth/github" class="btn btn-simple btn-just-icon">
									<i class="fa fa-github" aria-hidden="true"></i>
								</a>
								<a href="/users/auth/google" class="btn btn-simple btn-just-icon">
									<i class="fa fa-google-plus"></i>
								</a>
							</div>
						</div>
						<p class="text-divider">Or</p>
						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<div class="content">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="material-icons">face</i>
								</span>
								<div class="form-group is-empty">  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "First Name..." %><span class="material-input"></span></div>
							</div>

							<div class="input-group">
								<span class="input-group-addon">
									<i class="material-icons">email</i>
								</span>
								<div class="form-group is-empty"><%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password..." %><span class="material-input"></span></div>
							</div>

              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %>
                    remember_me
                  </label>
                </div>
              <% end -%>
						</div>
						<div class="footer text-center">
                <%= f.submit "Log in",  class: "btn btn-simple btn-primary btn-lg" %>
						</div>
          <% end %>
				</div>
        <%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>
