<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<!-- <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" %> -->
<%= javascript_include_tag "https://cdn.jsdelivr.net/toastr/2.1.3/toastr.min.js" %>
<% unless flash.empty? %>
<script type="text/javascript">
$(document).ready(function() {
   <% flash.each do |f| %>
   <% type = f[0].gsub('notice', 'info').gsub('alert','warning') %>
    toastr['<%= type %>']('<%= f[1] %>');
   <% end %>
})
</script>
<% end %>
<% if @problem_page %>
  <%= javascript_include_tag 'codemirror-load', 'data-turbolinks-track': 'reload' %>
<% end %>
