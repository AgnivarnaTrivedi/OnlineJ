<div class="container">
	<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active"><%= @username %></li>
  </ol>
	<div class="row">
		<div class="col-sm-4">
			<div class="panel panel-info panel-shadow">
				<div class="panel-heading">
					<h3 class="panel-title">Profile</h3>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-sm-2">
							<% unless @image.blank? %>
							<img src="<%=@image%>" alt="" />
							<% end %>
						</div>
						<div class="col-sm-6">
							<h5 style="padding-top: 0px; margin-top: 0px" ><%=@name%></h5 >
						</div>
					</div>
					<hr class="divider">
          <p>Username: @<%=@username%></p>
					<hr>
          <p>College: <%=@college%></p>
					<hr>
					<p>Problem solved: <%= @total_currect %></p>
					<hr>
          <p>Total Submissions: <%= @total_submissions %></p>
				</div>
			</div>
		</div>
		<div class="col-sm-8">
			<div class="panel panel-success">
				<div class="panel-heading">
						<h3 class="panel-title">Solved</h3>
				</div>
				<div class="panel-body">
					<table class='table table-striped table-responsive'>
						<tr>
							<%@solved.each do |ccode, problems|%>
							<td style="text-align: left;width:4em"><%= ccode %> : </td>
							<td style="text-align: left;">
								<% problems.each do |pcode| %>
								<%= link_to pcode,  problem_path(ccode,pcode)%>
								<% end %>
							</td>
							<%end%>
						</tr>
					 </table>

				</div>
			</div>
		</div>
	</div>
</div>
